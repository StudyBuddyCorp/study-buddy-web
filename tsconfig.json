{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@course/*": [
        "./src/entities/course/*",
        "./src/features/course/*",
        "./src/widgets/course/*"
      ],
      "@user/*": [
        "./src/entities/user/*",
        "./src/features/user/*",
        "./src/widgets/user/*"
      ],
      "@department/*": [
        "./src/entities/department/*",
        "./src/features/department/*",
        "./src/widgets/department/*"
      ],
      "@group/*": [
        "./src/entities/group/*",
        "./src/features/group/*",
        "./src/widgets/group/*"
      ],
      "@specialty/*": [
        "./src/entities/specialty/*",
        "./src/features/specialty/*",
        "./src/widgets/specialty/*"
      ],
      "@ui/*": ["./src/shared/components/ui/*"]
    },
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
